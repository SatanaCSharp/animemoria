{
  "name": "animemoria",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=24.11.1"
  },
  "scripts": {
    "build": "turbo run build",
    "registry:rest:dev": "turbo run rest:dev --filter=registry-service",
    "api-gateway:rest:dev": "turbo run rest:dev --filter=api-gateway-service",
    "api-gateway:graphql:dev": "turbo run graphql:dev --filter=api-gateway-service",
    "graphql:dev": "turbo run graphql:dev --filter='*-service' --filter='!api-gateway-service'",
    "grpc:dev": "turbo run grpc:dev",
    "build:packages": "turbo run build --filter='./packages/*'",
    "migration:run": "turbo run migration:run",
    "migration:run:prod": "turbo run migration:run:prod",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "docker:build:admin": "./infra/deployment/docker/build.sh vite admin",
    "docker:build:registry": "./infra/deployment/docker/build.sh nestjs registry-service rest.main",
    "docker:build:users:grpc": "./infra/deployment/docker/build.sh nestjs users-service grpc.main",
    "docker:build:users:graphql": "./infra/deployment/docker/build.sh nestjs users-service graphql.main",
    "docker:build:auth:grpc": "./infra/deployment/docker/build.sh nestjs auth-service grpc.main",
    "docker:build:auth:graphql": "./infra/deployment/docker/build.sh nestjs auth-service graphql.main",
    "docker:build:api:gateway": "./infra/deployment/docker/build.sh nestjs api-gateway-service graphql.main",
    "docker:build:services": "pnpm run docker:build:registry && pnpm run docker:build:users-grpc && pnpm run docker:build:auth-grpc && pnpm run docker:build:api-gateway",
    "docker:build:all": "pnpm run docker:build:admin && pnpm run docker:build:services"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "conventional-changelog-atom": "^5.0.0",
    "@packages/eslint-config-base": "workspace:*",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@apollo/server-plugin-landing-page-graphql-playground"
      ],
      "allowedVersions": {
        "@apollo/server": "5"
      }
    }
  }
}
