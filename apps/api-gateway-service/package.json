{
  "name": "api-gateway-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "graphql:dev": "nest start --watch --entryFile graphql.main",
    "graphql:prod": "node dist/graphql.main",
    "rest:dev": "nest start --watch --entryFile rest.main",
    "rest:prod": "node dist/rest.main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@packages/nest-shared": "workspace:*",
    "@packages/shared-types": "workspace:*",
    "@packages/utils": "workspace:*",
    "@packages/grpc": "workspace:*",
    "@apollo/gateway": "catalog:",
    "@apollo/server": "catalog:",
    "@as-integrations/express5": "catalog:",
    "@nestjs/apollo": "catalog:",
    "@nestjs/axios": "catalog:",
    "@nestjs/common": "catalog:",
    "@nestjs/config": "catalog:",
    "@nestjs/core": "catalog:",
    "@nestjs/graphql": "catalog:",
    "@nestjs/microservices": "catalog:",
    "@nestjs/platform-express": "catalog:",
    "class-transformer": "catalog:",
    "cookie-parser": "catalog:",
    "nestjs-pino": "catalog:",
    "pino-http": "catalog:",
    "reflect-metadata": "catalog:",
    "rxjs": "catalog:"
  },
  "devDependencies": {
    "@nestjs/cli": "catalog:",
    "@nestjs/schematics": "catalog:",
    "@nestjs/testing": "catalog:",
    "@packages/eslint-config-service": "workspace:*",
    "@packages/tsconfig": "workspace:*",
    "@types/cookie-parser": "catalog:",
    "@types/express": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "@types/supertest": "catalog:",
    "jest": "catalog:",
    "lint-staged": "catalog:",
    "source-map-support": "catalog:",
    "supertest": "catalog:",
    "ts-jest": "catalog:",
    "ts-loader": "catalog:",
    "ts-node": "catalog:",
    "tsc-alias": "catalog:",
    "tsconfig-paths": "catalog:",
    "typescript": "catalog:"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
